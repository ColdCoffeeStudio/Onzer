db.createCollection("songs", {
    validator: {
      $jsonSchema: {
        bsonType: "object",
        required: [ "id", "title", "artist", "album", "year", "style"],
        properties: {
          id: {
            bsonType: "String",
            description: "must be a string and is required"
          },
          title: {
            bsonType: "String",
            description: "must be a string and is required"
          },
          artist: {
            bsonType: "String",
            description: "must be a string and is required"
          },
          album: {
            bsonType: "String",
            description: "must be a string and is required"
          },
          year: {
            bsonType: "Number",
            min: [1887, 'Price must be greater than 1887']
            max: [2023, 'The release date must be less than 2024']
            description: "Must be a number and is required"
          },
          style: {
            bsonType: "String",
            description: "must be an array and is required"
          },
        }
      }
    }
  })